<% provide(:title, @user.user_name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
<h1>
  <%= gravatar_for @user %>

  <%= @user.user_name  %>
  <%= @user.lat  %>
  <%= @user.lon  %>
  <h3>Is admin?</h3><p><%= @user.admin  %></p>

  <% if current_user.admin? %>
    | <%= link_to "delete", @user, method: :delete,
                                  data: { confirm: "You sure?" } %>


  <% end %>

</h1>
    </section>
  </aside>
</div>
